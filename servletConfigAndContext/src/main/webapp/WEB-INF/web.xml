<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>DemoServlet</servlet-name>
  	<display-name>DemoServlet</display-name>
  	<description></description>
  	<servlet-class>controller.DemoServlet</servlet-class>
  	
  	<init-param>
  	<param-name>driver</param-name>
  	<param-value>driver is called from demo servlet</param-value>	
  	</init-param>
  	
  	<init-param>
  	<param-name>name</param-name>
  	<param-value>name is called from demo servlet</param-value>  	
  	</init-param>
  	
  	<init-param>
  	<param-name>password</param-name>
  	<param-value>password is called from demo servlet</param-value>  	
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DemoServlet</servlet-name>
  	<url-pattern>/DemoServlet</url-pattern>
  </servlet-mapping>
</web-app>
